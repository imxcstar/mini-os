@page "/"

<PageTitle>MiniOS Web</PageTitle>

<h1>MiniOS Library Integration</h1>

<p>The shared MiniOS assembly version is @_assemblyVersion.</p>
<p>Sample virtual directory '/web' exists: @_pathStatus.</p>

@code
{
    private readonly Vfs _vfs = new();
    private string _pathStatus = "initializing...";
    private readonly string _assemblyVersion = typeof(Vfs).Assembly.GetName().Version?.ToString() ?? "local";

    protected override void OnInitialized()
    {
        _vfs.Mkdir("/web");
        _pathStatus = _vfs.Exists("/web") ? "true" : "false";
    }
}
